<section id="droit-hero" class="droit-hero">
  <div class="hero-container">
    <h1 class="hero-title-hidden">{{ section.settings.title }}</h1>
    <div class="hero-subtitle-hidden">{{ section.settings.subtitle }}</div>
    {% if section.settings.description != blank %}
      <div class="hero-description-hidden">{{ section.settings.description }}</div>
    {% endif %}
    <div class="hero-cta-hidden">
      {% if section.settings.primary_button_label != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="btn-primary">
          <i class="fas fa-gavel"></i>
          {{ section.settings.primary_button_label }}
        </a>
      {% endif %}
      {% if section.settings.secondary_button_label != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn-secondary">
          <i class="fas fa-file-alt"></i>
          {{ section.settings.secondary_button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .droit-hero {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%) !important;
    min-height: 60vh !important;
    display: flex !important;
    align-items: center !important;
    position: relative !important;
    overflow: hidden !important;
  }
  .droit-hero::before {
    content: '';
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    background:
      radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(139, 92, 246, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 40% 40%, rgba(16, 185, 129, 0.1) 0%, transparent 50%) !important;
    pointer-events: none !important;
  }
  .hero-container {
    max-width: 1200px !important;
    margin: 0 auto !important;
    padding: 2rem !important;
    text-align: center !important;
    position: relative !important;
    z-index: 2 !important;
  }
  .droit-hero h1 {
    font-size: 4rem !important;
    font-weight: 700 !important;
    color: var(--white) !important;
    margin-bottom: 1.5rem !important;
    line-height: 1.1 !important;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3) !important;
    opacity: 1 !important;
    transform: none !important;
  }
  .hero-subtitle {
    font-size: 1.4rem !important;
    color: rgba(255, 255, 255, 0.95) !important;
    margin-bottom: 1.5rem !important;
    max-width: 800px !important;
    margin-left: auto !important;
    margin-right: auto !important;
    line-height: 1.6 !important;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2) !important;
    opacity: 1 !important;
    transform: none !important;
  }
  .hero-description {
    font-size: 1.1rem !important;
    color: rgba(255, 255, 255, 0.9) !important;
    margin-bottom: 2.5rem !important;
    max-width: 700px !important;
    margin-left: auto !important;
    margin-right: auto !important;
    line-height: 1.7 !important;
    opacity: 1 !important;
    transform: none !important;
  }
  .hero-cta {
    display: flex !important;
    gap: 1.5rem !important;
    justify-content: center !important;
    flex-wrap: wrap !important;
    opacity: 1 !important;
    transform: none !important;
  }
  .btn-primary, .btn-secondary {
    padding: 1.2rem 2.5rem !important;
    border-radius: 50px !important;
    text-decoration: none !important;
    font-weight: 600 !important;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
    display: inline-flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
  }
  .btn-primary {
    background: var(--white) !important;
    color: var(--primary-color) !important;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2) !important;
  }
  .btn-secondary {
    background: rgba(255, 255, 255, 0.1) !important;
    color: var(--white) !important;
    border: 2px solid rgba(255, 255, 255, 0.3) !important;
    backdrop-filter: blur(10px) !important;
  }
  .btn-primary:hover {
    transform: translateY(-3px) scale(1.02) !important;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3) !important;
  }
  .btn-secondary:hover {
    background: var(--white) !important;
    color: var(--primary-color) !important;
    border-color: var(--white) !important;
    transform: translateY(-3px) scale(1.02) !important;
  }
  
  /* Animation classes */
  .hero-title-hidden {
    opacity: 0 !important;
    transform: translateY(40px) !important;
    transition: opacity 0.8s cubic-bezier(0.22, 1, 0.36, 1), transform 0.8s cubic-bezier(0.22, 1, 0.36, 1) !important;
  }
  .hero-subtitle-hidden {
    opacity: 0 !important;
    transform: translateY(40px) !important;
    transition: opacity 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.2s, transform 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.2s !important;
  }
  .hero-description-hidden {
    opacity: 0 !important;
    transform: translateY(40px) !important;
    transition: opacity 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.4s, transform 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.4s !important;
  }
  .hero-cta-hidden {
    opacity: 0 !important;
    transform: translateY(40px) !important;
    transition: opacity 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.6s, transform 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.6s !important;
  }
  .hero-title-visible, .hero-subtitle-visible, .hero-description-visible, .hero-cta-visible {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }
  
  @media (max-width: 768px) {
    .droit-hero h1 {
      font-size: 2.5rem !important;
    }
    .hero-subtitle {
      font-size: 1.2rem !important;
    }
    .hero-cta {
      flex-direction: column !important;
      align-items: center !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const heroElements = document.querySelectorAll('.hero-title-hidden, .hero-subtitle-hidden, .hero-description-hidden, .hero-cta-hidden');
    
    const revealOnScroll = () => {
      const triggerBottom = window.innerHeight * 0.85;
      heroElements.forEach(element => {
        const elementTop = element.getBoundingClientRect().top;
        if (elementTop < triggerBottom) {
          if (element.classList.contains('hero-title-hidden')) {
            element.classList.add('hero-title-visible');
          } else if (element.classList.contains('hero-subtitle-hidden')) {
            element.classList.add('hero-subtitle-visible');
          } else if (element.classList.contains('hero-description-hidden')) {
            element.classList.add('hero-description-visible');
          } else if (element.classList.contains('hero-cta-hidden')) {
            element.classList.add('hero-cta-visible');
          }
        }
      });
    };
    
    window.addEventListener('scroll', revealOnScroll);
    revealOnScroll(); // Trigger on load
  });
</script>

