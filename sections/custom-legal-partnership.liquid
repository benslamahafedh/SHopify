<style>
  .custom-legal-partnership {
    padding: 6rem 0 !important;
    background: linear-gradient(135deg, var(--light-bg) 0%, var(--gray-100) 50%, var(--light-bg) 100%) !important;
    position: relative !important;
  }
  .custom-legal-partnership-container {
    max-width: 1200px !important;
    margin: 0 auto !important;
    padding: 0 1.5rem !important;
  }
  .custom-legal-partnership-section-header {
    text-align: center !important;
    margin-bottom: 4rem !important;
  }
  .custom-legal-partnership-section-title {
    font-size: 3.5rem !important;
    font-weight: 700 !important;
    margin-bottom: 1.5rem !important;
    color: var(--text-primary) !important;
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary-color) 100%) !important;
    -webkit-background-clip: text !important;
    background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
  }
  .custom-legal-partnership-section-subtitle {
    font-size: 1.2rem !important;
    color: var(--text-secondary) !important;
    max-width: 600px !important;
    margin: 0 auto !important;
    line-height: 1.7 !important;
  }
  .custom-legal-partnership-card {
    background: var(--white) !important;
    border-radius: 24px !important;
    padding: 3rem !important;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1) !important;
    border: 1px solid rgba(37, 99, 235, 0.1) !important;
    position: relative !important;
    overflow: hidden !important;
  }
  .custom-legal-partnership-card::before {
    content: '';
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    height: 6px !important;
    background: var(--gradient-primary) !important;
  }
  .custom-legal-partnership-content {
    text-align: center !important;
  }
  .custom-legal-partnership-icon {
    width: 100px !important;
    height: 100px !important;
    background: var(--gradient-primary) !important;
    border-radius: 24px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    margin: 0 auto 2rem !important;
    color: var(--white) !important;
    font-size: 2.5rem !important;
    box-shadow: 0 15px 40px rgba(37, 99, 235, 0.3) !important;
  }
  .custom-legal-partnership-content h3 {
    font-size: 2.2rem !important;
    font-weight: 600 !important;
    color: var(--text-primary) !important;
    margin-bottom: 1.5rem !important;
  }
  .custom-legal-partnership-content > p {
    font-size: 1.1rem !important;
    color: var(--text-secondary) !important;
    line-height: 1.7 !important;
    margin-bottom: 3rem !important;
    max-width: 800px !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }
  .custom-legal-partnership-services {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)) !important;
    gap: 2rem !important;
    margin-bottom: 3rem !important;
    text-align: left !important;
  }
  .custom-legal-partnership-service {
    background: var(--light-bg) !important;
    border-radius: 16px !important;
    padding: 1.5rem !important;
    border: 1px solid var(--gray-200) !important;
    display: flex !important;
    align-items: flex-start !important;
    gap: 1rem !important;
    transition: all 0.3s ease !important;
  }
  .custom-legal-partnership-service:hover {
    background: var(--gray-50) !important;
    border-color: var(--primary-color) !important;
    transform: translateY(-2px) !important;
  }
  .custom-legal-partnership-service-icon-small {
    width: 50px !important;
    height: 50px !important;
    background: var(--gradient-primary) !important;
    border-radius: 12px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    color: var(--white) !important;
    font-size: 1.2rem !important;
    flex-shrink: 0 !important;
  }
  .custom-legal-partnership-service-content h4 {
    font-size: 1.2rem !important;
    font-weight: 600 !important;
    color: var(--text-primary) !important;
    margin-bottom: 0.5rem !important;
  }
  .custom-legal-partnership-service-content p {
    color: var(--text-secondary) !important;
    line-height: 1.5 !important;
    margin: 0 !important;
  }
  .custom-legal-partnership-note {
    background: rgba(37, 99, 235, 0.1) !important;
    border: 2px solid rgba(37, 99, 235, 0.2) !important;
    border-radius: 16px !important;
    padding: 2rem !important;
    margin: 3rem 0 !important;
    display: flex !important;
    align-items: flex-start !important;
    gap: 1rem !important;
    text-align: left !important;
  }
  .custom-legal-partnership-note i {
    color: var(--primary-color) !important;
    font-size: 1.5rem !important;
    margin-top: 0.2rem !important;
    flex-shrink: 0 !important;
  }
  .custom-legal-partnership-note strong {
    color: var(--primary-color) !important;
    font-size: 1.1rem !important;
    display: block !important;
    margin-bottom: 0.5rem !important;
  }
  .custom-legal-partnership-note p {
    color: var(--text-primary) !important;
    line-height: 1.6 !important;
    margin: 0 !important;
  }
  .custom-legal-partnership-cta {
    margin-top: 2rem !important;
  }
  .custom-legal-partnership-button {
    background: var(--gradient-primary) !important;
    color: var(--white) !important;
    padding: 1.2rem 2.5rem !important;
    border-radius: 50px !important;
    text-decoration: none !important;
    font-weight: 600 !important;
    display: inline-flex !important;
    align-items: center !important;
    gap: 0.5rem !important;
    box-shadow: 0 10px 30px rgba(37, 99, 235, 0.3) !important;
    transition: all 0.3s ease !important;
  }
  .custom-legal-partnership-button:hover {
    transform: translateY(-3px) !important;
    box-shadow: 0 15px 40px rgba(37, 99, 235, 0.4) !important;
  }
  
  @media (max-width: 768px) {
    .custom-legal-partnership-services {
      grid-template-columns: 1fr !important;
    }
    .custom-legal-partnership-section-title {
      font-size: 2.5rem !important;
    }
    .custom-legal-partnership-card {
      padding: 2rem !important;
    }
  }
</style>

<section id="custom-legal-partnership" class="custom-legal-partnership">
  <div class="custom-legal-partnership-container">
    <div class="custom-legal-partnership-section-header">
      <h2 class="custom-legal-partnership-section-title">{{ section.settings.title }}</h2>
      <div class="custom-legal-partnership-section-subtitle">{{ section.settings.subtitle }}</div>
    </div>
    
    <div class="custom-legal-partnership-card">
      <div class="custom-legal-partnership-content">
        <div class="custom-legal-partnership-icon">
          <i class="fas fa-balance-scale"></i>
        </div>
        <h3>{{ section.settings.partnership_title }}</h3>
        <p>{{ section.settings.partnership_description }}</p>
        
        {% if section.blocks.size > 0 %}
          <div class="custom-legal-partnership-services">
            {% for block in section.blocks %}
              <div class="custom-legal-partnership-service">
                <div class="custom-legal-partnership-service-icon-small">
                  <i class="{{ block.settings.icon }}"></i>
                </div>
                <div class="custom-legal-partnership-service-content">
                  <h4>{{ block.settings.title }}</h4>
                  <p>{{ block.settings.description }}</p>
                </div>
              </div>
            {% endfor %}
          </div>
        {% endif %}
        
        {% if section.settings.note != blank %}
          <div class="custom-legal-partnership-note">
            <i class="fas fa-shield-alt"></i>
            <div>
              <strong>{{ section.settings.note_title | default: 'Solution de Partenariat Claire' }}</strong>
              <p>{{ section.settings.note }}</p>
            </div>
          </div>
        {% endif %}
        
        {% if section.settings.button_label != blank %}
          <div class="custom-legal-partnership-cta">
            <a href="{{ section.settings.button_link }}" class="custom-legal-partnership-button">
              <i class="fas fa-gavel"></i>
              {{ section.settings.button_label }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Legal Partnership",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Services de Partenariat Juridique"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Pour les aspects juridiques complexes, nous collaborons avec des avocats spécialisés."
    },
    {
      "type": "text",
      "id": "partnership_title",
      "label": "Partnership Title",
      "default": "Support Juridique Sécurisé"
    },
    {
      "type": "textarea",
      "id": "partnership_description",
      "label": "Partnership Description",
      "default": "En cas de difficulté, nous proposons un accord tripartite transparent entre vous, notre cabinet, et un avocat partenaire. Vous bénéficiez d'un accompagnement administratif complet ET d'un suivi juridique professionnel."
    },
    {
      "type": "text",
      "id": "note_title",
      "label": "Note Title",
      "default": "Solution de Partenariat Claire"
    },
    {
      "type": "textarea",
      "id": "note",
      "label": "Explanatory Note",
      "default": "Transparence sur nos rôles : nous ne fournissons pas de conseil juridique. Notre réseau d'avocats partenaires est compétent et réactif, vous garantissant un gain de temps et une tranquillité d'esprit."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Consultation Juridique"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "#contact"
    }
  ],
  "blocks": [
    {
      "type": "legal_service",
      "name": "Legal Service",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Font Awesome Icon (e.g. fas fa-file-signature)",
          "default": "fas fa-file-signature"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Service Title",
          "default": "Recours et Contentieux"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Service Description",
          "default": "Recours gracieux, hiérarchique ou contentieux en cas de refus ou d'arrêté d'expulsion."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Legal Partnership",
      "category": "Custom"
    }
  ]
}
{% endschema %} 