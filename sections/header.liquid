<script>
document.addEventListener('DOMContentLoaded', () => {
  const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
  const mobileNavMenu = document.getElementById('MobileNavMenuLP');
  const navContainer = document.querySelector('.nav-container'); // Get the nav-container

  function closeMobileMenu() {
    if (mobileNavMenu.classList.contains('active')) {
      mobileMenuToggle.setAttribute('aria-expanded', 'false');
      mobileNavMenu.classList.remove('active');
    }
  }

  if (mobileMenuToggle && mobileNavMenu) {
    mobileMenuToggle.addEventListener('click', (event) => {
      event.stopPropagation(); // Prevent click from bubbling to document
      const isExpanded = mobileMenuToggle.getAttribute('aria-expanded') === 'true';
      mobileMenuToggle.setAttribute('aria-expanded', String(!isExpanded));
      mobileNavMenu.classList.toggle('active');
    });

    // Close menu when a link inside it is clicked
    mobileNavMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        closeMobileMenu();
      });
    });
  } else {
    if (!mobileMenuToggle) {
      console.error('Mobile menu toggle button not found.');
    }
    if (!mobileNavMenu) {
      console.error('Mobile navigation menu not found (ID: MobileNavMenuLP).');
    }
  }

  // Close menu when clicking outside of it
  document.addEventListener('click', (event) => {
    if (mobileNavMenu.classList.contains('active')) {
      // Check if the click is outside the mobileNavMenu and not on the toggle button
      if (!mobileNavMenu.contains(event.target) && !mobileMenuToggle.contains(event.target)) {
        closeMobileMenu();
      }
    }
  });

  // Handle window resize
  window.addEventListener('resize', () => {
    if (window.innerWidth > 989) { // Matches your CSS breakpoint for mobile
      closeMobileMenu();
    }
  });
});
</script>

