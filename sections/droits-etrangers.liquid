<section id="droits-etrangers" class="droits-etrangers">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <div class="section-subtitle">{{ section.settings.subtitle }}</div>
    </div>
    <div class="droits-grid">
      {% for block in section.blocks %}
        <div class="droit-card">
          <div class="droit-icon">
            <i class="{{ block.settings.icon }}"></i>
          </div>
          <div class="droit-title">{{ block.settings.title }}</div>
          <div class="droit-description">{{ block.settings.description }}</div>
          {% if block.settings.points != blank %}
            {% assign points_array = block.settings.points | split: '\n' %}
            <ul class="droit-points">
              {% for point in points_array %}
                {% unless point == blank %}
                  <li>{{ point }}</li>
                {% endunless %}
              {% endfor %}
            </ul>
          {% endif %}
          {% if block.settings.important_note != blank %}
            <div class="droit-note">
              <i class="fas fa-info-circle"></i>
              {{ block.settings.important_note }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    
    {% if section.settings.contact_info != blank %}
      <div class="droits-footer">
        <div class="contact-banner">
          <h3>{{ section.settings.contact_title | default: 'Besoin d\'aide?' }}</h3>
          <p>{{ section.settings.contact_info }}</p>
          {% if section.settings.contact_button_label != blank %}
            <a href="{{ section.settings.contact_button_link }}" class="contact-cta">
              {{ section.settings.contact_button_label }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
