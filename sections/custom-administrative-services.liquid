<style>
  .custom-administrative-services {
    padding: 6rem 0 !important;
    background: linear-gradient(135deg, var(--white) 0%, var(--light-bg) 50%, var(--white) 100%) !important;
    position: relative !important;
    overflow: hidden !important;
  }
  .custom-administrative-services::before {
    content: '';
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    background: radial-gradient(circle at 25% 25%, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(139, 92, 246, 0.05) 0%, transparent 50%) !important;
    pointer-events: none !important;
  }
  .custom-administrative-services-container {
    max-width: 1200px !important;
    margin: 0 auto !important;
    padding: 0 1.5rem !important;
    position: relative !important;
    z-index: 2 !important;
  }
  .custom-administrative-services-section-header {
    text-align: center !important;
    margin-bottom: 5rem !important;
  }
  .custom-administrative-services-section-title {
    font-size: 4rem !important;
    font-weight: 700 !important;
    margin-bottom: 1.5rem !important;
    color: var(--text-primary) !important;
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary-color) 100%) !important;
    -webkit-background-clip: text !important;
    background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
  }
  .custom-administrative-services-section-subtitle {
    font-size: 1.2rem !important;
    color: var(--text-secondary) !important;
    max-width: 700px !important;
    margin: 0 auto !important;
    line-height: 1.7 !important;
  }
  .custom-administrative-services-grid {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)) !important;
    gap: 2.5rem !important;
  }
  @media (max-width: 768px) {
    .custom-administrative-services-grid {
      grid-template-columns: 1fr !important;
      gap: 1.5rem !important;
    }
    .custom-administrative-services-section-title {
      font-size: 2.5rem !important;
    }
  }
  .custom-administrative-services-card {
    background: var(--white) !important;
    border-radius: 20px !important;
    padding: 2.5rem !important;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08) !important;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
    border: 1px solid rgba(37, 99, 235, 0.1) !important;
    position: relative !important;
    overflow: hidden !important;
  }
  .custom-administrative-services-card::before {
    content: '';
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    height: 4px !important;
    background: var(--gradient-primary) !important;
    transform: scaleX(0) !important;
    transform-origin: left !important;
    transition: transform 0.4s ease !important;
  }
  .custom-administrative-services-card:hover::before {
    transform: scaleX(1) !important;
  }
  .custom-administrative-services-card:hover {
    transform: translateY(-10px) !important;
    box-shadow: 0 25px 60px rgba(37, 99, 235, 0.15) !important;
    border-color: rgba(37, 99, 235, 0.2) !important;
  }
  .custom-administrative-services-icon {
    width: 80px !important;
    height: 80px !important;
    background: var(--gradient-primary) !important;
    border-radius: 20px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    margin-bottom: 2rem !important;
    color: var(--white) !important;
    font-size: 1.8rem !important;
    box-shadow: 0 10px 30px rgba(37, 99, 235, 0.3) !important;
    transition: all 0.3s ease !important;
  }
  .custom-administrative-services-card:hover .custom-administrative-services-icon {
    transform: scale(1.1) rotate(5deg) !important;
    box-shadow: 0 15px 40px rgba(37, 99, 235, 0.4) !important;
  }
  .custom-administrative-services-title {
    font-size: 1.7rem !important;
    font-weight: 600 !important;
    margin-bottom: 1rem !important;
    color: var(--text-primary) !important;
  }
  .custom-administrative-services-description {
    color: var(--text-secondary) !important;
    margin-bottom: 1.5rem !important;
    line-height: 1.6 !important;
  }
  .custom-administrative-services-features {
    list-style: none !important;
    margin-bottom: 1.5rem !important;
    padding: 0 !important;
  }
  .custom-administrative-services-features li {
    padding: 0.4rem 0 !important;
    color: var(--text-secondary) !important;
    position: relative !important;
    padding-left: 1.5rem !important;
    line-height: 1.5 !important;
  }
  .custom-administrative-services-features li::before {
    content: '✓' !important;
    position: absolute !important;
    left: 0 !important;
    color: var(--success-color) !important;
    font-weight: 600 !important;
  }
  .custom-administrative-services-note {
    background: rgba(37, 99, 235, 0.1) !important;
    border: 1px solid rgba(37, 99, 235, 0.2) !important;
    border-radius: 10px !important;
    padding: 1rem !important;
    color: var(--primary-color) !important;
    font-size: 0.9rem !important;
    display: flex !important;
    align-items: flex-start !important;
    gap: 0.5rem !important;
    margin-top: 1rem !important;
  }
  .custom-administrative-services-note i {
    margin-top: 0.1rem !important;
    flex-shrink: 0 !important;
  }
</style>

<section id="custom-administrative-services" class="custom-administrative-services">
  <div class="custom-administrative-services-container">
    <div class="custom-administrative-services-section-header">
      <h2 class="custom-administrative-services-section-title">{{ section.settings.title }}</h2>
      <div class="custom-administrative-services-section-subtitle">{{ section.settings.subtitle }}</div>
    </div>
    <div class="custom-administrative-services-grid">
      {% for block in section.blocks %}
        <div class="custom-administrative-services-card">
          <div class="custom-administrative-services-icon">
            <i class="{{ block.settings.icon }}"></i>
          </div>
          <div class="custom-administrative-services-title">{{ block.settings.title }}</div>
          <div class="custom-administrative-services-description">{{ block.settings.description }}</div>
          {% if block.settings.features != blank %}
            {% assign features_array = block.settings.features | split: '\n' %}
            <ul class="custom-administrative-services-features">
              {% for feature in features_array %}
                {% unless feature == blank %}
                  <li>{{ feature }}</li>
                {% endunless %}
              {% endfor %}
            </ul>
          {% endif %}
          {% if block.settings.note != blank %}
            <div class="custom-administrative-services-note">
              <i class="fas fa-info-circle"></i>
              {{ block.settings.note }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Administrative Services",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Services Administratifs"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Nous vous assistons dans la préparation, numérisation et transmission de vos dossiers aux autorités compétentes."
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Font Awesome Icon (e.g. fas fa-file-alt)",
          "default": "fas fa-file-alt"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Service Title",
          "default": "Préparation de Dossiers"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Service Description",
          "default": "Préparation complète de votre dossier selon les exigences officielles."
        },
        {
          "type": "textarea",
          "id": "features",
          "label": "Features (one per line)",
          "info": "Separate each feature with a new line"
        },
        {
          "type": "textarea",
          "id": "note",
          "label": "Important Note (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Administrative Services",
      "category": "Custom"
    }
  ]
}
{% endschema %} 