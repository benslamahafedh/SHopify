<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
  /* Root variables from landing page */
  :root {
    --primary-color: #2563eb !important;
    --primary-dark: #1d4ed8 !important;
    --primary-light: #3b82f6 !important;
    --secondary-color: #64748b !important;
    --accent-color: #f59e0b !important;
    --success-color: #10b981 !important;
    --warning-color: #f59e0b !important;
    --danger-color: #ef4444 !important;
    --light-bg: #f8fafc !important;
    --white: #ffffff !important;
    --text-primary: #1e293b !important;
    --text-secondary: #64748b !important;
    --border-color: #e2e8f0 !important;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05) !important;
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1) !important;
    --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1) !important;
    --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1) !important;
    --gradient-primary: linear-gradient(135deg, #2563eb 0%, #3b82f6 50%, #1d4ed8 100%) !important;
    --gradient-secondary: linear-gradient(135deg, #64748b 0%, #475569 100%) !important;
    --gradient-hero: linear-gradient(135deg, #1e3a8a 0%, #2563eb 25%, #3b82f6 50%, #1e40af 75%, #1d4ed8 100%) !important;
    --gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
    --blur-backdrop: blur(20px) !important;
  }

  /* Footer styling matching the landing page */
  .footer {
    background: var(--text-primary) !important;
    color: var(--white) !important;
    font-family: 'Inter', sans-serif !important;
    padding: 3rem 0 1rem !important;
    position: relative !important; /* Kept for potential absolute children, common practice */
    font-size: 1.5rem !important;
  }

  .footer .container {
    max-width: 1200px !important;
    margin: 0 auto !important;
    padding: 0 1.5rem !important;
    position: relative !important; /* Matches landing page general .container style */
    z-index: 2 !important;       /* Matches landing page general .container style */
  }

  .footer-content {
    display: grid !important;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)) !important;
    gap: 2rem !important;
    margin-bottom: 2rem !important;
  }

  .footer-section h4 {
    /* font-family: 'Inter', sans-serif !important; /* Inherited from .footer */
    font-size: 1.7rem !important;
    font-weight: 600 !important;
    margin-bottom: 1rem !important;
    color: var(--white) !important;
    letter-spacing: 0.01em !important; /* Subtle spacing, kept as per previous version */
  }

  .footer-section h4 .fas,
  .footer-section h4 .fab {
    margin-right: 0.5rem !important;
  }

  .footer-section p {
    color: rgba(255,255,255,0.8) !important;
    /* font-family: 'Inter', sans-serif !important; /* Inherited from .footer */
    font-size: 1.5rem !important; 
    line-height: 1.6 !important;
    margin-bottom: 1rem !important;
  }

  .footer-section p .fas,
  .footer-section p .fab {
    margin-right: 0.5rem !important;
    width: 1em !important; 
    text-align: center !important;
  }

  .footer-links {
    list-style: none !important;
    padding-left: 0 !important;
    margin: 0 !important;
  }

  .footer-links li {
    margin-bottom: 0.5rem !important;
  }

  .footer-links a {
    color: rgba(255,255,255,0.8) !important;
    text-decoration: none !important;
    transition: color 0.3s ease !important;
    /* font-family: 'Inter', sans-serif !important; /* Inherited from .footer */
    font-size: 1.5rem !important; 
    display: block !important; 
    padding: 0.1rem 0 !important; 
  }

  .footer-links a:hover {
    color: var(--white) !important;
  }

  .footer-social-links {
    display: flex !important;
    gap: 1rem !important;
    margin-top: 1rem !important; 
  }

  .footer-social-links a {
    color: rgba(255,255,255,0.8) !important;
    font-size: 1.2rem !important; 
    transition: all 0.3s !important;
  }

  .footer-social-links a:hover {
    color: var(--white) !important; 
    transform: translateY(-2px) !important; 
  }

  .footer-bottom {
    border-top: 1px solid rgba(255,255,255,0.1) !important;
    padding-top: 1rem !important;
    text-align: center !important;
    color: rgba(255,255,255,0.6) !important;
    /* font-family: 'Inter', sans-serif !important; /* Inherited from .footer */
    font-size: 1.5rem !important; 
  }

  .footer-text-content {
    color: rgba(255,255,255,0.8) !important;
    /* font-family: 'Inter', sans-serif !important; /* Inherited from .footer */
    font-size: 1.5rem !important;
    line-height: 1.6 !important;
  }
  
  .footer-text-content p {
    margin-bottom: 1rem !important; /* Already covered by .footer-section p, but can be kept for explicitness if text_column is not always in a .footer-section */
  }
  
  .footer-text-content a {
    color: var(--primary-light) !important; 
    text-decoration: underline !important;
    transition: color 0.3s ease !important;
  }
  
  .footer-text-content a:hover {
    color: var(--white) !important;
  }

  /* Responsive design: Relies on auto-fit for columns. */
  @media (max-width: 768px) {
    .footer {
      padding: 2.5rem 0 1rem !important; 
    }
    .footer-content {
      gap: 1.5rem !important; 
    }
  }
</style>
<footer class="footer">
  <div class="container">
    <div class="footer-content">
      {%- for block in section.blocks -%}
        {% case block.type %}
          
          {% when 'about_column' %}
          <div class="footer-section" {{ block.shopify_attributes }}>
            <h4>
              {% if block.settings.icon != blank %}
                <i class="{{ block.settings.icon }}"></i>
              {% endif %}
              {{ block.settings.title }}
            </h4>
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
            <div class="footer-social-links">
              {% if block.settings.linkedin != blank %}
                <a href="{{ block.settings.linkedin }}" target="_blank" rel="noopener" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
              {% endif %}
              {% if block.settings.facebook != blank %}
                <a href="{{ block.settings.facebook }}" target="_blank" rel="noopener" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
              {% endif %}
              {% if block.settings.twitter != blank %}
                <a href="{{ block.settings.twitter }}" target="_blank" rel="noopener" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
              {% endif %}
              {% if block.settings.instagram != blank %}
                <a href="{{ block.settings.instagram }}" target="_blank" rel="noopener" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
              {% endif %}
            </div>
          </div>
          
          {% when 'links_column' %}
          <div class="footer-section" {{ block.shopify_attributes }}>
            <h4>{{ block.settings.title }}</h4>
            {%- assign menu = block.settings.menu -%}
            {% if menu != blank and linklists[menu].links.size > 0 %}
              <ul class="footer-links">
                {%- for link in linklists[menu].links -%}
                  <li>
                    <a href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {%- endfor -%}
              </ul>
            {% endif %}
          </div>
          
          {% when 'text_column' %}
          <div class="footer-section" {{ block.shopify_attributes }}>
            <h4>{{ block.settings.title }}</h4>
            {% if block.settings.text != blank %}
              <div class="footer-text-content">
                {{ block.settings.text }}
              </div>
            {% endif %}
          </div>
          
          {% when 'contact_column' %}
          <div class="footer-section" {{ block.shopify_attributes }}>
            <h4>{{ block.settings.title }}</h4>
            {% if block.settings.phone != blank %}
              <p><i class="fas fa-phone"></i> {{ block.settings.phone }}</p>
            {% endif %}
            {% if block.settings.email != blank %}
              <p><i class="fas fa-envelope"></i> {{ block.settings.email }}</p>
            {% endif %}
            {% if block.settings.address != blank %}
              <p><i class="fas fa-map-marker-alt"></i> {{ block.settings.address | newline_to_br }}</p>
            {% endif %}
            {% if block.settings.hours != blank %}
              <p><i class="fas fa-clock"></i> {{ block.settings.hours | newline_to_br }}</p>
            {% endif %}
          </div>
          
          {% when 'custom_links' %}
          <div class="footer-section" {{ block.shopify_attributes }}>
            <h4>{{ block.settings.title }}</h4>
            <ul class="footer-links">
              {% for i in (1..6) %}
                {%- assign link_title_setting = 'link_' | append: i | append: '_text' -%}
                {%- assign link_url_setting = 'link_' | append: i | append: '_url' -%}
                {%- assign link_title = block.settings[link_title_setting] -%}
                {%- assign link_url = block.settings[link_url_setting] -%}
                {% if link_title != blank and link_url != blank %}
                  <li>
                    <a href="{{ link_url }}">{{ link_title }}</a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
          
        {% endcase %}
      {%- endfor -%}
    </div>
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright1 | default: 'Tous droits réservés.' }} | {{ section.settings.copyright2 | default: 'Cabinet agréé et partenaire avocat inscrit au barreau.' }}</p>
    </div>
  </div>
</footer>

